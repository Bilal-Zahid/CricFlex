<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >


    <item android:state_pressed="true">

        <shape  android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="#000000"
                />
            <padding
                android:left="30dp"
                android:top="5dp"
                android:right="30dp"
                android:bottom="5dp"
                />

            <stroke
                android:width="1dp"
                android:color="#616161"
                />
        </shape>

    </item>

    <item android:state_focused="true">

        <shape  android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="#000000"
                />
            <padding
                android:left="30dp"
                android:top="5dp"
                android:right="30dp"
                android:bottom="5dp"
                />

            <stroke
                android:width="1dp"
                android:color="#616161"
                />
        </shape>

    </item>

    <item>

        <shape  android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="#50000000"
                />

            <stroke
                android:width="1dp"
                android:color="#616161"
                />
        </shape>


    </item>
</selector>