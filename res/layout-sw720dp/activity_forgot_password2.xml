<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityLogin">

    <ImageView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        android:src="@drawable/bkd13"
        android:contentDescription="@string/content_desc_imageView"/>



    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/cricflex_logo_stroke"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:gravity="fill_horizontal"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="100%"
        android:contentDescription="@string/content_desc_imageView"/>


    <TextView
        android:id="@+id/text"
        android:labelFor="@+id/fgp_security"
        android:text="@string/security_question"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_light"
        android:textSize="40sp"
        android:layout_below="@id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%" />


    <EditText
        android:id="@+id/fgp_security"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="80%"
        android:background="@drawable/edittext_bottom_border_bg"
        android:drawableStart="@drawable/security_icon"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:drawablePadding="10dp"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textColorHint="#CCCCCC"
        android:inputType="textPersonName"
        android:imeOptions="actionDone"
        android:textCursorDrawable="@null"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/fgp_next2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fgp_security"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="40%"
        android:onClick="setfgpLayout3"
        android:text="@string/fgp_button_next"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:background="@drawable/button1_bg" />

</android.support.percent.PercentRelativeLayout>
