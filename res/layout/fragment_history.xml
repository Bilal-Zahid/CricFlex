<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/date_picker">

    <ImageView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        android:src="@drawable/bkd17" />


    <RelativeLayout
        android:id="@+id/dateSelector"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:gravity="fill_horizontal"
        android:orientation="horizontal" >


        <LinearLayout
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:gravity="left">


            <Button
                android:id="@+id/prevYear"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:text="\u25c2\u25c2"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/prevMonth"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:text="\u25c2"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"/>

        </LinearLayout>
        <!--\u25b8-->
        <TextView
            android:id="@+id/currentMonth"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:text="July 2016"
            android:layout_centerInParent="true"/>



        <LinearLayout
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">

            <Button
                android:id="@+id/nextMonth"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginEnd="3dp"
                android:text="\u25b8"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent" />


            <Button
                android:id="@+id/nextYear"
                android:layout_width="50sp"
                android:layout_height="50sp"

                android:text="\u25b8\u25b8"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent" />


        </LinearLayout>
    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dateSelector">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/graph_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/dateSelector"
                android:gravity="center">



                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart0"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/graph_part1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/graph_part"
                android:gravity="center">



                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/graph_part2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/graph_part1"
                android:gravity="center">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/graph_part3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/graph_part2"
                android:gravity="center">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>
</ScrollView>


</RelativeLayout>