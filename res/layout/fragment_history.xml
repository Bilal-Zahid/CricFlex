<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        android:src="@drawable/sk1" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <LinearLayout
            android:id="@+id/tab_buttons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:text="Daily"
                android:id="@+id/daily_button"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"


                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/button6_bg"
                />

            <Button
                android:text="Monthly"
                android:id="@+id/monthly_button"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/button6_bg"

                />

        </LinearLayout>




        <ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/ViewSwitcher"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <RelativeLayout
                android:background="#00800d"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >



                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/drop_calendar"
                    android:background="@drawable/edittext_bottom_border_bg"
                    android:drawableStart="@drawable/calendar1"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:drawablePadding="10dp"
                    android:hint="Choose date"
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:padding="10dp"
                    android:textColorHint="#CCCCCC" />


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />




            </RelativeLayout>

            <RelativeLayout
                android:background="#007dc3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />



            </RelativeLayout>

        </ViewSwitcher>







    </LinearLayout>





</RelativeLayout>