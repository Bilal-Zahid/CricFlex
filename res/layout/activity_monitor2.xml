        <!--body-->

        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:weightSum="1">

            <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:alignmentMode="alignBounds"
                android:columnCount="3"
                android:rowCount="4"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:background="#aa002147">

                <!--first column body-->




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="5dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Arm Twist"
                    android:textColor="@color/text_light"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="5dp"
                    android:id="@+id/monitor_arm_twist"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0\u00b0"
                    android:textSize="@dimen/home_medium_text"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"/>
                <!--second column body-->
                <!--third column body-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/textView4"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Action Time"
                    android:textColor="@color/text_light"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="5dp"
                    android:id="@+id/monitor_action_time"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0.0s"
                    android:textSize="@dimen/home_medium_text"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="5dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Force"
                    android:textColor="@color/text_light"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginTop="5dp"
                    android:id="@+id/monitor_force"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:gravity="center"
                    android:layout_gravity="fill_horizontal"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0 N"
                    android:textSize="@dimen/home_medium_text"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"/>

            </GridLayout>






        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/body2"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <!--first column body-->

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/legal_background_color">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monitor_legal_balls"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:textSize="@dimen/monitor_medium_text"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/textView2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Legal Balls"
                    android:textColor="@color/text_light"
                    android:textAlignment="center"
                    android:textStyle="bold"


                    />
                >



            </LinearLayout>

            <!--second column body-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"

                android:background="@color/illegal_background_color">>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monitor_illegal_balls"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:textSize="@dimen/monitor_medium_text"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/textView3"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Illegal Balls"
                    android:textColor="@color/text_light"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

            </LinearLayout>



        </LinearLayout>

        <!--footer-->

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <Button
                android:id="@+id/monitor_finish_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="FINISH"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="35dp"
                android:background="@drawable/button2_bg"/>


        </LinearLayout>



    </LinearLayout>


