<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        android:src="@drawable/bkd13"
        android:contentDescription="@string/content_desc_imageView"/>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5.5%"
        app:layout_widthPercent="15%"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">


        <ProgressBar
            android:id="@+id/myProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/battery_progress"
            android:progress="65"/>

        <TextView
            android:id="@+id/myTextProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:text="65%"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%"
        app:layout_widthPercent="10%"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/monitor_ble_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bluetooth_disconnected_icon" />

    </LinearLayout>




    <TextView
        android:id="@+id/monitor_angle_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="25%"
        app:layout_widthPercent="100%"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/monitor_angle"
        android:textColor="@color/text_light"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/angle_text"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/monitor_status_text"
        android:layout_below="@id/monitor_angle_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:paddingBottom="5dp"
        android:layout_marginBottom="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/monitor_status"
        android:textColor="@color/text_light"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/monitor_status_text"/>

    <GridLayout
        android:id="@+id/bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="100%"
        android:orientation="horizontal"
        android:alignmentMode="alignBounds"
        android:columnCount="3"
        android:rowCount="2"
        android:textAlignment="center"
        android:background="#aa002147"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <!--first column body-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="0dp"
            android:id="@+id/monitor_force"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/monitor_force"
            android:textSize="@dimen/home_medium_text"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/monitor_force_text"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>

        <!--second column body-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="0dp"
            android:id="@+id/monitor_arm_twist"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/monitor_twist"
            android:textSize="@dimen/home_medium_text"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="0dp"
            android:layout_row="1"
            android:layout_column="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/monitor_twist_text"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>
        <!--third column body-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginTop="0dp"
            android:id="@+id/monitor_action_time"
            android:layout_row="0"
            android:layout_column="2"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/monitor_time"
            android:textSize="@dimen/home_medium_text"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="0dp"
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="2"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/monitor_time_text"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>

    </GridLayout>


    <Button
        android:id="@+id/monitor_finish_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:text="@string/monitor_finish_button"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:background="@drawable/button2_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:id="@+id/tile_legal"
        android:layout_above="@id/monitor_finish_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="18%"
        app:layout_widthPercent="50%"
        android:orientation="vertical"
        android:background="@color/legal_background_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monitor_legal_balls"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/monitor_legal"
            android:textSize="@dimen/monitor_medium_text"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:id="@+id/textView2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/monitor_legal_text"
            android:textColor="@color/text_light"
            android:textAlignment="center"
            android:textStyle="bold"


            />

    </LinearLayout>

    <!--second column body-->
    <LinearLayout
        android:id="@+id/tile_illegal"
        android:layout_above="@id/monitor_finish_button"
        android:layout_toEndOf="@id/tile_legal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="18%"
        app:layout_widthPercent="50%"
        android:orientation="vertical"
        android:background="@color/illegal_background_color">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monitor_illegal_balls"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/monitor_illegal"
            android:textSize="@dimen/monitor_medium_text"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:id="@+id/textView3"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/monitor_illegal_text"
            android:textColor="@color/text_light"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>



</android.support.percent.PercentRelativeLayout>
