<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        android:src="@drawable/bkd22"
        android:contentDescription="@string/content_desc_imageView"/>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="12%"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">


        <ProgressBar
            android:id="@+id/battery_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/battery_progress"
            android:progress="65"/>

        <TextView
            android:id="@+id/battery_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:text="65%"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%"
        app:layout_widthPercent="7%"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/monitor_ble_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bluetooth_disconnected_icon" />

    </LinearLayout>




    <TextView
        android:id="@+id/monitor_angle_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="22%"
        app:layout_widthPercent="100%"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/monitor_angle"
        android:textColor="@color/text_light"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="90sp" />

    <TextView
        android:id="@+id/monitor_status_text"
        android:layout_below="@id/monitor_angle_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:paddingBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/monitor_status"
        android:textColor="@color/text_light"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25sp"/>


    <LinearLayout
        android:id="@+id/metric1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="33.333333333%"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:background="@color/monitor_metric_bar_color">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/monitor_action_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/monitor_time"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="30sp"
            autofit:minTextSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/monitor_time_text"
            android:textSize="20sp"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/metric2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="33.333333333%"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/metric1"
        android:background="@color/monitor_metric_bar_color">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/monitor_force"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/monitor_force"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="30sp"
            autofit:minTextSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/monitor_force_text"
            android:textSize="20sp"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/metric3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="33.333333333%"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/metric2"
        android:background="@color/monitor_metric_bar_color">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/monitor_arm_twist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/monitor_twist"
            android:textColor="@color/text_light"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="30sp"
            autofit:minTextSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/monitor_twist_text"
            android:textSize="20sp"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/tile_legal"
        android:layout_above="@id/footer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="50%"
        android:orientation="vertical"
        android:background="@color/legal_background_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monitor_legal_balls"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/monitor_legal"
            android:textSize="40sp"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/monitor_legal_text"
            android:textColor="@color/text_light"
            android:textAlignment="center"
            android:textStyle="bold"


            />

    </LinearLayout>

    <!--second column body-->
    <LinearLayout
        android:id="@+id/tile_illegal"
        android:layout_above="@id/footer"
        android:layout_toEndOf="@id/tile_legal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="15%"
        app:layout_widthPercent="50%"
        android:orientation="vertical"
        android:background="@color/illegal_background_color">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monitor_illegal_balls"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/monitor_illegal"
            android:textSize="40sp"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/monitor_illegal_text"
            android:textColor="@color/text_light"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/monitor_finish_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/monitor_finish_button"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:background="@drawable/button2_bg"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"/>


    </LinearLayout>


</android.support.percent.PercentRelativeLayout>
