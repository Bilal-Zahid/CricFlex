    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        android:src="@drawable/bkd13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:alignmentMode="alignBounds"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="fill"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <!--header-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/header"
            android:layout_weight="1"
            android:layout_margin="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monitor_angle_text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0\u00b0"
                    android:textColor="@color/text_light"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/angle_text"

                    android:layout_marginBottom="0dp"

                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"/>



                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monitor_graph_button"
                    android:src="@drawable/graph"
                    android:visibility="visible"
                    android:background="@android:color/transparent"
                    android:layout_alignBottom="@+id/monitor_angle_text"
                    android:layout_toEndOf="@+id/monitor_angle_text"
                    android:layout_marginBottom="5dp" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/monitor_status_text"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Monitoring..."
                android:textColor="@color/text_light"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/monitor_status_text"/>

        </LinearLayout>


