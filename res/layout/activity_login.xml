<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="@drawable/bkd13">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="top"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView"
        android:layout_above="@+id/etUsername"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cricflexlogo"
        android:layout_weight="1"/>

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:id="@+id/etUsername"
        android:background="@drawable/edittext_bottom_border_bg"
        android:drawableStart="@drawable/profile1"
        android:paddingLeft="15dp"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textColorHint="#CCCCCC"
        android:layout_above="@+id/etPassword"
        android:layout_weight="1"
        android:inputType="textPersonName"
        android:imeOptions="actionNext"
        android:nextFocusDown="@+id/etPassword"
        android:textCursorDrawable="@null"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/etPassword"
        android:background="@drawable/edittext_bottom_border_bg"
        android:drawableStart="@drawable/password1"
        android:paddingLeft="15dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:hint="Password"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"


        android:layout_above="@+id/Login"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etUsername"
        android:layout_weight="1"
        android:textCursorDrawable="@null"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:background="@drawable/button_bg"


        android:id="@+id/Login"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/etPassword"
        android:layout_weight="1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="Register new account"
        android:textColor="@drawable/button_text_color"
        android:background="@android:color/transparent"
        android:id="@+id/bRegister"
        android:layout_below="@+id/Login"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>
