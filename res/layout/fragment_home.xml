<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scaleType="centerCrop"
    android:id="@+id/background"
    android:src="@drawable/bkd21" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:alignmentMode="alignBounds"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:gravity="fill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/header"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_margin="10dp">

    <com.example.cricflex.ArcProgress
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="5dp"
        android:id="@+id/home_legal_to_illegal_ratio"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        custom:arc_angle="260"
        custom:arc_stroke_width="20dp"
        custom:arc_max="100"
        custom:arc_finished_color="@color/arc_finished_color"
        custom:arc_unfinished_color="@color/arc_unfinished_color"
        android:textStyle="bold"
        custom:arc_bottom_text="PROGRESS"
        custom:arc_bottom_text_size="15dp"
        custom:arc_suffix_text_padding="5dp"
        custom:arc_suffix_text_size="20dp"
        custom:arc_text_size="60dp"
        custom:arc_text_color="@color/text_light"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        android:id="@+id/textView1"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Legal to Illegal Ball Ratio"
        android:textColor="@color/text_light" />

    </LinearLayout>


    <!--body-->

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:weightSum="1">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:alignmentMode="alignBounds"
            android:columnCount="3"
            android:rowCount="2"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/strip">

            <!--first column body-->

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_columnWeight="1"-->
                <!--android:layout_margin="1dp"-->
                <!--android:id="@+id/imageView1"-->
                <!--android:layout_row="1"-->
                <!--android:layout_column="0"-->
                <!--android:src="@drawable/ball"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:gravity="center"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="5dp"
                android:id="@+id/textView2"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Total Balls"
                android:textColor="@color/text_light"

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="5dp"
                android:id="@+id/home_totalballs"
                android:layout_row="0"
                android:layout_column="0"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1004"
                android:textSize="@dimen/home_medium_text"
                android:textColor="@color/text_light"
                android:textStyle="bold"/>
>




            <!--second column body-->

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_columnWeight="1"-->
                <!--android:layout_margin="1dp"-->
                <!--android:id="@+id/imageView3"-->
                <!--android:layout_row="0"-->
                <!--android:layout_column="2"-->
                <!--android:src="@drawable/bandarm"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:gravity="center"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="5dp"
                android:id="@+id/textView3"
                android:layout_row="1"
                android:layout_column="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Average Angle"
                android:textColor="@color/text_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="5dp"
                android:id="@+id/home_average_angle"
                android:layout_row="0"
                android:layout_column="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="14\u00b0"
                android:textSize="@dimen/home_medium_text"
                android:textColor="@color/text_light"
                android:textStyle="bold"/>


            <!--third column body-->

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_columnWeight="1"-->
                <!--android:layout_margin="1dp"-->
                <!--android:id="@+id/imageView2"-->
                <!--android:layout_row="0"-->
                <!--android:layout_column="4"-->
                <!--android:src="@drawable/ok_icon"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:gravity="center"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="5dp"
                android:id="@+id/textView4"
                android:layout_row="1"
                android:layout_column="2"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Longest Streak"
                android:textColor="@color/text_light"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="5dp"
                android:id="@+id/home_longest_streak"
                android:layout_row="0"
                android:layout_column="2"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="30"
                android:textSize="@dimen/home_medium_text"
                android:textColor="@color/text_light"
                android:textStyle="bold"/>

        </GridLayout>





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/body2"

        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"


            android:layout_marginBottom="5dp"
            android:id="@+id/textView5"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Last bowling angle was "
            android:textColor="@color/text_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="5dp"
            android:id="@+id/home_last_angle"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="15\u00b0"
            android:textColor="@color/text_light"
            android:textStyle="bold"/>




    </LinearLayout>

    <!--footer-->

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <Button
            android:id="@+id/home_start"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="START BOWLING !"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:background="@drawable/button2_bg"/>


    </LinearLayout>

    <!--<ImageView android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:id="@+id/imageView10"-->
        <!--android:src="@drawable/stadium" />-->



</LinearLayout>
</RelativeLayout>