<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:alignmentMode="alignBounds"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:gravity="fill">


    <!--header-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/header"

        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_margin="10dp">
    <com.example.cricflex.ArcProgress

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:id="@+id/arc_progress"

        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:gravity="center"
        custom:arc_progress="45"
        custom:arc_angle="260"
        custom:arc_stroke_width="6dp"
        custom:arc_max="100"
        custom:arc_finished_color="@color/arc_finished_color"
        custom:arc_unfinished_color="@color/arc_unfinished_color"
        custom:arc_bottom_text="PROGRESS"
        custom:arc_suffix_text="%"
        custom:arc_text_size="40dp"
        custom:arc_text_color="#ffffff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:id="@+id/textView1"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Legal to Illegal Ball Ratio"/>

    </LinearLayout>


    <!--body-->

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:weightSum="1">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:alignmentMode="alignBounds"
            android:columnCount="3"
            android:rowCount="3"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="fill">

            <!--first column body-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:id="@+id/imageView1"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/ball"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:id="@+id/home_totalballs"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1004"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:id="@+id/textView2"
                android:layout_row="2"
                android:layout_column="0"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total\nBalls"/>




            <!--second column body-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:id="@+id/imageView3"
                android:layout_row="0"
                android:layout_column="1"
                android:src="@drawable/bandarm"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:id="@+id/home_average_angle"
                android:layout_row="1"
                android:layout_column="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="14\u00b0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:id="@+id/textView3"
                android:layout_row="2"
                android:layout_column="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Average\nAngle"/>

            <!--third column body-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:id="@+id/imageView2"
                android:layout_row="0"
                android:layout_column="2"
                android:src="@drawable/ok_icon"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:id="@+id/home_longest_streak"
                android:layout_row="1"
                android:layout_column="2"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="30"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:id="@+id/textView4"
                android:layout_row="2"
                android:layout_column="2"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Longest\nStreak"/>
        </GridLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/body2"

        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"


            android:layout_marginBottom="5dp"
            android:id="@+id/textView5"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Last bowling angle was "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="5dp"
            android:id="@+id/home_last_angle"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="15\u00b0"/>




    </LinearLayout>

    <!--footer-->

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <Button
            android:id="@+id/home_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Bowling !"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:background="@drawable/button_bottom"
 />


    </LinearLayout>





</LinearLayout>