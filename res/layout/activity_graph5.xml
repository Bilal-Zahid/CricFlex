<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cricflex.ActivityGraph5">

    <ImageView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        android:src="@drawable/sk1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/graph_angle_text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0\u00b0"
        android:textColor="@color/text_light"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/angle_text"

        android:layout_marginBottom="0dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instantGraphLayout"
        android:layout_below="@id/graph_angle_text"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#00000000"
        >



    </RelativeLayout>



</RelativeLayout>
