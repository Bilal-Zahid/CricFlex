<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:background="@color/cal_bg_color">

    <TextView
        android:id="@+id/calTextTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@color/cal_header_color"
        android:textSize="25sp"
        android:textColor="@color/text_light"
        android:text="@string/cal_step1"
        android:textStyle="bold"
        />


    <LinearLayout
        android:id="@+id/gif_layout"
        android:layout_below="@id/calTextTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="60%"
        app:layout_widthPercent="95%"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@color/cal_gif_bg_color"
        android:gravity="center"
        >


        <com.example.cricflex.PlayGifView
            android:id="@+id/calGifView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="centerCrop"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/calTextBottom"
        android:layout_below="@id/gif_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="95%"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/text_light"
        android:text="@string/cal_step1_desc"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_below="@id/calTextBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="30%"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/cal_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    </LinearLayout>

    <Button
        android:id="@+id/calOkButton"
        android:layout_below="@id/calTextBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="30%"
        android:layout_centerHorizontal="true"
        android:background="@drawable/calibration_ok_button_bg"
        android:text="@string/cal_ok"
        android:textSize="25sp"
        />


</android.support.percent.PercentRelativeLayout>