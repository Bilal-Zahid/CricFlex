<?xml version="1.0" encoding="UTF-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ActivityMonitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        android:src="@drawable/bkd25" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:alignmentMode="alignBounds"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="fill"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp">



        <!--header-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/header"
            android:layout_weight="1"
            android:layout_margin="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monitor_angle_text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0\u00b0"
                    android:textColor="@color/text_light"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/angle_text"

                    android:layout_marginBottom="0dp"

                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"/>



                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monitor_graph_button"
                    android:src="@drawable/graph"
                    android:visibility="visible"
                    android:background="@android:color/transparent"
                    android:layout_alignBottom="@+id/monitor_angle_text"
                    android:layout_toEndOf="@+id/monitor_angle_text"
                    android:layout_marginBottom="5dp" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/monitor_status_text"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Monitoring..."
                android:textColor="@color/text_light"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="@dimen/monitor_status_text"/>

        </LinearLayout>


        <!--body-->




        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingStart="10dp"
            android:layout_weight="0"

            android:background="@drawable/capsule_background">


            <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">




                <!--<ImageView-->
                    <!--android:id="@+id/imgFirst"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/ic_launcher"/>-->

                <!--<ImageView-->
                    <!--android:id="@+id/imgSecond"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="bottom|center"-->
                    <!--android:src="@drawable/ic_launcher"/>-->

                <Chronometer
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monitor_timer"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"

                    android:textAlignment="center"
                    android:textSize="@dimen/chronometer_text"
                    android:textColor="@color/text_dark"
                    android:layout_weight="1"
                    />

                <com.example.cricflex.PlayGifView
                    android:id="@+id/loading_gif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_gravity="bottom|center">
                    <!--android:layout_weight="2">-->

                    <requestFocus></requestFocus>

                </com.example.cricflex.PlayGifView>

            </FrameLayout>







            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/monitor_timer_button"
                android:src="@drawable/start_circle_large"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:onClick="startChronometer"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/body2"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <!--first column body-->

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/legal_background_color">




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monitor_legal_balls"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:textSize="@dimen/monitor_medium_text"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/textView2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Legal Balls"
                    android:textColor="@color/text_light"
                    android:textAlignment="center"
                    android:textStyle="bold"


                    />
                >



            </LinearLayout>

            <!--second column body-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"

                android:background="@color/illegal_background_color">>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/monitor_illegal_balls"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:textSize="@dimen/monitor_medium_text"
                    android:textColor="@color/text_light"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/textView3"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Illegal Balls"
                    android:textColor="@color/text_light"
                    android:textAlignment="center"
                    android:textStyle="bold"/>

            </LinearLayout>



        </LinearLayout>

        <!--footer-->

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_gravity="bottom"
            android:gravity="center">
            <!--android:layout_weight="1"-->



            <Button
                android:id="@+id/monitor_start_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="START"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:background="@drawable/button4_bg"
                android:layout_weight="1"
                />


            <Button
                android:id="@+id/monitor_finish_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="FINISH"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:background="@drawable/button5_bg"
                android:layout_weight="1"
                />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>

