<?xml version="1.0" encoding="utf-8"?>




<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:alignmentMode="alignBounds"
    android:columnCount="3"
    android:rowCount="7"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:gravity="fill">


    <com.example.cricflex_ui.ArcProgress

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:layout_marginTop="10dp"
        android:id="@+id/arc_progress"
        android:layout_row="0"
        android:layout_column="1"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:gravity="center"
        custom:arc_progress="45"
        custom:arc_angle="260"
        custom:arc_stroke_width="6dp"
        custom:arc_max="100"
        custom:arc_finished_color="@color/home_arc_finished_color"
        custom:arc_unfinished_color="@color/home_arc_unfinished_color"
        custom:arc_bottom_text="PROGRESS"
        custom:arc_suffix_text="%"
        custom:arc_text_size="40dp"
        custom:arc_text_color="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/textView1"
        android:layout_row="1"
        android:layout_column="1"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Legal to Illegal Ball Ratio"/>

    <!--first column body-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/imageView1"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@mipmap/cricflex_logo"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/home_totalballs"
        android:layout_row="3"
        android:layout_column="0"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1004"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/textView2"
        android:layout_row="4"
        android:layout_column="0"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total\nBalls"/>




    <!--second column body-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/imageView3"
        android:layout_row="2"
        android:layout_column="1"
        android:src="@mipmap/cricflex_logo"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/home_average_angle"
        android:layout_row="3"
        android:layout_column="1"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="14\u00b0" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/textView3"
        android:layout_row="4"
        android:layout_column="1"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Average\nAngle"/>

    <!--third column body-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/imageView2"
        android:layout_row="2"
        android:layout_column="2"
        android:src="@mipmap/cricflex_logo"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/home_longest_streak"
        android:layout_row="3"
        android:layout_column="2"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="30"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/textView4"
        android:layout_row="4"
        android:layout_column="2"
        android:gravity="center"
        android:layout_gravity="fill_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Longest\nStreak"/>

    <!--second column footer-->





</GridLayout>