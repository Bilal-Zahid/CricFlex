<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="@string/setup_profile"
    tools:context=".ActivitySetupProfile">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        android:src="@drawable/bkd13"
        android:contentDescription="@string/content_desc_imageView"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">

    </LinearLayout>





    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="100%"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true">




        <!--Gender-->

        <TextView
            android:id="@+id/bowlingarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/bowling_arm"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" >
        </TextView>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="#ffffff" />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RadioGroup
                android:id="@+id/rgBowlingArm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rdbLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="@string/left"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rdbRight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/right"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RadioGroup>
        </LinearLayout>


        <!--Location-->

        <TextView
            android:id="@+id/bowlingstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/bowling_style"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" >
        </TextView>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="#ffffff" />


        <Spinner
            android:id="@+id/bowlingstyle_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:dropDownWidth="wrap_content"
            android:popupBackground="@color/c2"
            />

        <!--Date of Birth-->

        <TextView
            android:id="@+id/careerlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/career_level"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" >
        </TextView>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="#ffffff" />

        <Spinner
            android:id="@+id/careerlevel_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:dropDownWidth="wrap_content"
            android:drawableStart="@drawable/profile1"
            android:popupBackground="@android:color/black"
            />





    </LinearLayout>






    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/body">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/stp_button_done"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:background="@drawable/button1_bg"
            android:id="@+id/stp_done"
            android:layout_weight="1"/>

    </LinearLayout>


</android.support.percent.PercentRelativeLayout>
