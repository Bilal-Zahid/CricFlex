<?xml version="1.0" encoding="utf-8"?>


<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:id="@+id/fragment_history_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/history_fragment_background_color">

    <!--<ImageView android:layout_width="fill_parent"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:id="@+id/background"-->
        <!--android:src="@drawable/bkd18" />-->


    <RelativeLayout
        android:id="@+id/dateSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">


        <LinearLayout
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical">


            <ImageButton
                android:id="@+id/prevYear"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:src="@drawable/previous_double_icon"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/content_desc_imageView"/>

            <ImageButton
                android:id="@+id/prevMonth"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:src="@drawable/previous_icon"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/content_desc_imageView"/>

        </LinearLayout>

        <TextView
            android:id="@+id/currentMonth"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:text="@string/history_month_year"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/nextMonth"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:src="@drawable/next_icon"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/content_desc_imageView"/>

            <ImageButton
                android:id="@+id/nextYear"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:src="@drawable/next_double_icon"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:gravity="center"
                android:contentDescription="@string/content_desc_imageView"/>


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/dateSelector"
        android:orientation="horizontal"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">

        <Button
            android:id="@+id/history_angle_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/history_tab_angle"
            android:textColor="@color/text_light"
            android:textSize="17sp"
            android:background="@drawable/history_button_tab_bg"
            style="?android:buttonBarStyle"/>
        <Button
            android:id="@+id/history_force_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/history_tab_force"
            android:textColor="@color/text_light"
            android:textSize="17sp"
            android:background="@drawable/history_button_tab_bg"
            style="?android:buttonBarStyle"/>
        <Button
            android:id="@+id/history_time_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/history_tab_time"
            android:textColor="@color/text_light"
            android:textSize="17sp"
            android:background="@drawable/history_button_tab_bg"
            style="?android:buttonBarStyle"/>
        <Button
            android:id="@+id/history_twist_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/history_tab_twist"
            android:textColor="@color/text_light"
            android:textSize="17sp"
            android:background="@drawable/history_button_tab_bg"
            style="?android:buttonBarStyle"/>

    </LinearLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="57%"
        app:layout_widthPercent="100%"
        android:layout_below="@+id/tabs"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textViewOver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/chart"
        android:textSize="15sp"
        android:text="@string/history_over"
        android:textColor="@color/text_light"
        />



    <!--stats-->

    <LinearLayout
        android:id="@+id/stat1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="13%"
        app:layout_widthPercent="33.333333333%"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/history_stat_maximum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/history_stat_maximum_value"
            android:textColor="@color/text_light"
            android:maxLines="1"
            android:textSize="25sp"
            autofit:minTextSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/history_stat_maximum"
            android:textSize="12sp"
            android:textColor="@color/text_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stat2"
        android:layout_toEndOf="@id/stat1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="13%"
        app:layout_widthPercent="33.333333333%"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/history_stat_minimum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/history_stat_minimum_value"
            android:textColor="@color/text_light"
            android:maxLines="1"
            android:textSize="25sp"
            autofit:minTextSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/history_stat_minimum"
            android:textSize="12sp"
            android:textColor="@color/text_light" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stat3"
        android:layout_toEndOf="@id/stat2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_heightPercent="13%"
        app:layout_widthPercent="33.333333333%"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/history_stat_average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/history_stat_average_value"
            android:textColor="@color/text_light"
            android:maxLines="1"
            android:textSize="25sp"
            autofit:minTextSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:text="@string/history_stat_average"
            android:textSize="12sp"
            android:textColor="@color/text_light" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/stat1"
        android:background="@color/light"
        />


</android.support.percent.PercentRelativeLayout>