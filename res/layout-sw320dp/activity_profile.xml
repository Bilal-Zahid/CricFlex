<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ActivityProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="@string/profile"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.cricflex.CircleImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_margin="2dp"
                    android:id="@+id/profilepicture"
                    android:gravity="center"
                    android:src="@drawable/profile_icon_large"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/light"
                    android:layout_centerInParent="true"/>
                
                <Button
                    android:id="@+id/button_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/button_edit_profile"
                    android:textColor="@color/edit_profile_button_text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="@drawable/button_edit_profile_bg"/>

            </RelativeLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/name"
                android:id="@+id/pv_name"
                android:textColor="@color/text_light"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_weight="1" />

        </LinearLayout>





        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/header"
            android:layout_centerHorizontal="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:alignmentMode="alignBounds"
                android:columnCount="2"
                android:rowCount="2"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="fill">

                <!--first column body-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:gravity="start"
                    android:layout_gravity="fill_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/bowling_style"
                    android:textColor="@color/text_light"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:gravity="start"
                    android:layout_gravity="fill_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/career_level"
                    android:textColor="@color/text_light"                     android:textSize="15sp"/>




                <!--second column body-->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:id="@+id/pv_bowling_style"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:gravity="end"
                    android:layout_gravity="fill_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/bowling_style"
                    android:textColor="@color/text_light"                     android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:id="@+id/pv_career_level"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:gravity="end"
                    android:layout_gravity="fill_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/career_level"
                    android:textColor="@color/text_light"                     android:textSize="15sp"/>


            </GridLayout>

        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:layout_below="@id/body"/>




            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="10dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:alignmentMode="alignBounds"
                    android:columnCount="2"
                    android:rowCount="8"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:gravity="fill">

                    <!--first column body-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:gravity="start"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/name"
                        android:textColor="@color/text_light"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:gravity="start"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/age"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:gravity="start"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/gender"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:gravity="start"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/weight"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:gravity="start"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/location"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:gravity="start"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/rgp_email"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:layout_row="6"
                        android:layout_column="0"
                        android:gravity="start"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/date_of_birth"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>

                    <!--second column body-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:id="@+id/pv_username"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:gravity="end"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/name"
                        android:textColor="@color/text_light"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:id="@+id/pv_age"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:gravity="end"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/age"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:id="@+id/pv_gender"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:gravity="end"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/gender"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:id="@+id/pv_weight"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:gravity="end"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/weight"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:id="@+id/pv_location"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:gravity="end"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/location"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:id="@+id/pv_email"
                        android:layout_row="5"
                        android:layout_column="1"
                        android:gravity="end"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/rgp_email"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="2dp"
                        android:id="@+id/pv_dateofbirth"
                        android:layout_row="6"
                        android:layout_column="1"
                        android:gravity="end"
                        android:layout_gravity="fill_horizontal"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/date_of_birth"
                        android:textColor="@color/text_light"                     android:textSize="15sp"/>


                </GridLayout>

            </LinearLayout>




        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

        </LinearLayout>


    </RelativeLayout>
</ScrollView>