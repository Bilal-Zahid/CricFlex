<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <ImageView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        android:src="@drawable/bkd17" />


    <RelativeLayout
        android:id="@+id/dateSelector"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:gravity="fill_horizontal"
        android:orientation="horizontal" >


        <LinearLayout
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:gravity="left">


            <Button
                android:id="@+id/prevYear"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:text="\u25c2\u25c2"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/prevMonth"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:text="\u25c2"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"/>

        </LinearLayout>
        <!--\u25b8-->
        <TextView
            android:id="@+id/currentMonth"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:text="July 2016"
            android:layout_centerInParent="true"/>



        <LinearLayout
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">

            <Button
                android:id="@+id/nextMonth"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginEnd="3dp"
                android:text="\u25b8"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent" />


            <Button
                android:id="@+id/nextYear"
                android:layout_width="50sp"
                android:layout_height="50sp"

                android:text="\u25b8\u25b8"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent" />


        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/graph_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/dateSelector"
        android:layout_above="@id/footer"
        android:gravity="center">



        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:gravity="left"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"

            android:alignmentMode="alignBounds"
            android:columnCount="2"
            android:rowCount="3"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <!--first column body-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="5dp"

                android:layout_row="0"
                android:layout_column="0"
                android:gravity="left"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Effort"
                android:textSize="20sp"
                android:textColor="@color/text_light"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="5dp"


                android:layout_row="1"
                android:layout_column="0"
                android:gravity="left"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Stamina"
                android:textSize="20sp"
                android:textColor="@color/text_light"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="5dp"

                android:layout_row="2"
                android:layout_column="0"
                android:gravity="left"
                android:layout_gravity="fill_horizontal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Improvement"
                android:textSize="20sp"
                android:textColor="@color/text_light"
                android:textStyle="bold"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar"

                android:layout_row="0"
                android:layout_column="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="5dp"
                android:padding="3dp"

                android:animationResolution="50"
                android:progress="30"
                android:progressDrawable="@drawable/custom_progress_bar1" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar2"

                android:layout_row="1"
                android:layout_column="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="5dp"
                android:padding="3dp"

                android:animationResolution="50"
                android:progress="80"
                android:progressDrawable="@drawable/custom_progress_bar2" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar1"

                android:layout_row="2"
                android:layout_column="1"
                android:gravity="center"
                android:layout_gravity="fill_horizontal"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginTop="5dp"
                android:padding="3dp"

                android:animationResolution="50"
                android:progress="50"
                android:progressDrawable="@drawable/custom_progress_bar3" />

        </GridLayout>





    </LinearLayout>


</RelativeLayout>