<?xml version="1.0" encoding="utf-8"?>


<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:id="@+id/background"
        android:src="@drawable/bkd17" />


    <RelativeLayout
        android:id="@+id/dateSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">


        <LinearLayout
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical">


            <Button
                android:id="@+id/prevYear"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:text="\u25c2\u25c2"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/prevMonth"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:text="\u25c2"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent"/>

        </LinearLayout>
        <!--\u25b8-->
        <TextView
            android:id="@+id/currentMonth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:text="July 2016"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/nextMonth"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginEnd="3dp"
                android:text="\u25b8"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent" />


            <Button
                android:id="@+id/nextYear"
                android:layout_width="50sp"
                android:layout_height="50sp"

                android:text="\u25b8\u25b8"
                android:textSize="40sp"
                android:textColor="#ffffff"
                android:background="@android:color/transparent" />


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/dateSelector"
        android:orientation="horizontal"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%">


        <Button
            android:id="@+id/history_angle_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Angle"
            android:textColor="@color/text_light"
            android:background="@drawable/history_button_tab_bg"/>
        <Button
            android:id="@+id/history_force_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Force"
            android:textColor="@color/text_light"
            android:background="@drawable/history_button_tab_bg"/>
        <Button
            android:id="@+id/history_time_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Time"
            android:textColor="@color/text_light"
            android:background="@drawable/history_button_tab_bg"/>
        <Button
            android:id="@+id/history_twist_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Twist"
            android:textColor="@color/text_light"
            android:background="@drawable/history_button_tab_bg"/>
    </LinearLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="60%"
        app:layout_widthPercent="100%"
        android:layout_below="@+id/tabs"
        android:layout_alignParentStart="true" />


</android.support.percent.PercentRelativeLayout>